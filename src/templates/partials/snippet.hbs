<section class="snippet">
  <div class='page-header'>
    <a data-toggle='collapse' href='#snippet{{index}}'><h1>{{data.title}}</h1></a>
  </div>
  <div class="collapse" id='snippet{{index}}'>
    {{#if data.image}}
        <img src="{{data.image}}"></img>
    {{/if}}
    {{#if data.svg}}
      {{> hammer }}
    {{/if}}
    {{#unless data.empty}}
      <section class='article'>
        {{#markdown}}
          {{{page}}}
        {{/markdown}}
      </section>
    {{/unless}}
  </div>
</section>
