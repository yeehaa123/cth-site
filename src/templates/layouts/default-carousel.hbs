            $(document).ready(function(){
              $('.snippet .collapse').first().addClass('in');

              $('#nav-wrapper').height($("#nav").height());

              $('#nav').affix({
                offset: { top: $('#nav').offset().top }
              });
            });
        </script>
    </body>
